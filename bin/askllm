#!/bin/bash

# Path to your Python script
# Make sure to update this path to where you save askllm.py
ASKLLM_SCRIPT="/users/trond/code/local_tools/askllm.py"

default_system_message="you are a macos terminal helper. If posed with a question like -how do i .. - just answer with the actual commands needed, otherwise answer as a helpful assistant but have an objective, even tone and avoid any kind of subjective adjectives like fantastic, interesting, important, intricate and so on"
system_message="$default_system_message"

# Parse command-line arguments
while getopts "s:" opt; do
  case $opt in
    s)
      system_message="$OPTARG"
      ;;
    ?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
  esac
done
shift $((OPTIND-1))

# Pass all remaining command-line arguments and the determined system message to the Python script
"$ASKLLM_SCRIPT" -s "$system_message" -m gemma3n:e2b "$@"
